<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="148dp"
android:layout_height="192dp"
android:background="#51488cff"
    android:id="@+id/level_layout"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <Button
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:text="Easy"
        android:id="@+id/easy_button"
        android:layout_x="27dp"
        android:layout_y="17dp"
        android:background="@drawable/level_button"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        android:typeface="normal"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/normal_button"
        android:layout_alignStart="@+id/normal_button" />

    <Button
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:text="Normal"
        android:id="@+id/normal_button"
        android:layout_y="80dp"
        android:background="@drawable/level_button"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        android:typeface="normal"
        android:layout_x="29dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:text="Hard"
        android:id="@+id/hard_button"
        android:layout_x="25dp"
        android:layout_y="147dp"
        android:background="@drawable/level_button"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        android:typeface="normal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>